<div class="container">

  <h1>Welcome to Movie Genius!</h1>

		<h3>Top Movies:</h3>
		<% @movies.each do |movie|%>

			<h3><a href="/movies/<%= movie.id%>"><%= movie.title %></a></h3>

		<% end %>

		<h4>Don't see the movie you're a genius for? Add it to our DB!</h4>
		<form action="/movies/new-title-search" method="post">
			<textarea name="title" placeholder="What movie are you looking for?"></textarea><br><br>
			<input type="submit" value="submit"><br><br>
		</form>

		<h3>Top Comments:</h3>


		<table>
			<tr>
				<th>Comment Text</th>
				<th>Line Text</th>
				<th>Movie Title</th>
				<th>Vote Count</th>
				<th>Comment Author</th>
			</tr>
			<% @top_comments.each do |comment|%>
				<tr>
					<td><a href="/comments/<%= comment.id %>"><%= comment.text %></a></td>
					<td><a href="/comment_on_line/<%= comment.line.id %>"><%= comment.line.text %></a></td>
					<td><a href="/movies/<%= comment.line.movie.id%>"><%= comment.line.movie.title %></a></td>
					<td><%= comment.vote_count%></td>
					<td><%= comment.user %></td>
				</tr>
			<% end %>

		</table>

</div>
